<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="bank">
        <description>
            Persistence unit for the Jakarta Persistence tutorial of the Hibernate Getting Started Guide
        </description>
        <class>org.example.entity.UserEntity</class>
        <class>org.example.entity.AccountEntity</class>
        <class>org.example.entity.AccountlistEntity</class>
        <class>org.example.entity.TransactionEntity</class>
        <class>org.example.entity.TransactionlistEntity</class>
        <!-- Konfiguracja połączenia z bazą danych -->
        <properties>
            <property name="hibernate.connection.driver_class" value="org.mariadb.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mariadb://localhost:3306/bank_gui"/>
            <property name="hibernate.connection.username" value="bank_admin"/>
            <property name="hibernate.connection.password" value="zaq1@WSX"/>

            <!-- Dialect dla MySQL -->
            <property name="dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.highlight_sql" value="true"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
        </properties>
    </persistence-unit>
</persistence>